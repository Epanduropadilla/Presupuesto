@model TiposCuentas

@{
	ViewData["Title"] = "Borar Tipo de Cuenta";
}

<h3 class="mb-3">¿Estas seguro de borar el tipo cuenta @Model.Nombre?</h3>

<form asp-action="BorrarTipoCuenta">
	<input type="hidden" asp-for="Id"></input>
	<button type="submit" class="btn btn-danger">Borrar</button>
	<a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>